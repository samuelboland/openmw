                <Property key="ImageHighlighted" value="textures\ui\toggle_over.dds"/>
                <Property key="ImageNormal" value="textures\ui\toggle_idle.dds"/>
                <Property key="ImagePushed" value="textures\ui\toggle_pressed.dds"/>
                <Property key="NeedKey" value="false"/>
            </Widget>
        </Widget>

        <!-- Search box-->
        <Widget type="HBox" position="8 200 545 23" align="Bottom HStretch">
            <Widget type="Spacer"/>
            <Widget type="EditBox" skin="MW_TextBoxEdit" position="0 0 200 23" name="FilterEdit" align="Bottom Right">
                <UserString key="AcceptTab" value="true"/>
                <Property key="Visible" value="true"/>
            </Widget>
        </Widget>

        <!-- Bottom bar -->
        <Widget type ="HBox" position="8 230 530 28" align="Right Bottom HStretch">
            <!-- Player armor -->
            <Widget type="ImageBox" skin="ImageBox" position="2 2 16 16" align="Left Top">
                <Property key="NeedMouse" value="false"/>
                <Property key="ImageTexture" value="icons\a\a_cuirass_lords.dds"/>
            </Widget>
            <Widget type="AutoSizedTextBox" skin="SandText" position="0 160 100 24" align="Right Bottom" name="ArmorRating">
                    <Property key="NeedMouse" value="false"/>
                    <Property key="TextAlign" value="Left" />
            </Widget>

            <Widget type="Spacer"/>

            <!-- Player encumbrance -->
            <Widget type="ImageBox" skin="ImageBox" position="2 2 16 16" align="Left Top">
                <Property key="NeedMouse" value="false"/>
                <Property key="ImageTexture" value="icons\weight.dds"/>
            </Widget>
                
            <Widget type="AutoSizedTextBox" skin="SandText" position="0 0 100 24" name="EncumbranceBar" align="Right Bottom">
                <Property key="NeedMouse" value="false"/>
                <Property key="TextAlign" value="Left" />
            </Widget>

            <Widget type="Spacer" />
                
            <!-- Player gold -->
            <Widget type="ImageBox" skin="ImageBox" position="0 445 16 16" align="Right Bottom">
                <Property key="NeedMouse" value="false"/>
                <Property key="ImageTexture" value="icons\tx_goldicon.dds"/>
            </Widget>

            <Widget type="AutoSizedTextBox" skin="SandText" position="0 460 50 24" align="Right Bottom" name="PlayerGold">
                    <Property key="NeedMouse" value="false"/>
                    <Property key="TextAlign" value="Left" />
            </Widget>
        </Widget>
        </Widget>
    </Widget>
