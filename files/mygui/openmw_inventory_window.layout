<?xml version="1.0" encoding="UTF-8"?>

<MyGUI type="Layout">
    <Widget type="Window" skin="MW_Window_Pinnable" layer="Windows" position="0 0 800 400" name="_Main">
        <Property key="MinSize" value="250 100"/>
    
    <Widget type="Widget" skin="" position="0 0 212 400" align="Stretch" name="LeftPane">
        <Widget type="Widget" skin="" position="8 0 206 400" align="Stretch" name="Avatar">
            <Widget type="ImageBox" skin="ImageBox" position="3 3 206 300" align="Stretch" name="AvatarImage">
                <UserString key="ToolTipType" value="AvatarItemSelection"/>
                <Property key="NeedMouse" value="true"/>
                <Property key="NeedKey" value="true"/>
            </Widget>
        </Widget>
        <Widget type="EditBox" skin="SandBrightText" position="10 0 190 400" align="Bottom HStretch" name="Description">
                <Property key="TextAlign" value="Center"/>
                <Property key="EditWordWrap" value="true"/>
                <Property key="NeedMouse" value="false"/>
                <Property key="NeedKey" value="false"/>
                <Property key="TextShadow" value="true"/>
                <Property key="TextShadowColour" value="0.1 0.1 0.1"/>
        </Widget>
    </Widget>

    <Widget type="Widget" skin="" position="232 0 568 300" align="Stretch" name="RightPane">
        <!-- Categories -->
        <Widget type="Widget" skin="" position="8 8 540 55" align="Left Top HStretch" name="Categories">

            <UserString key="MaxSize" value="52"/>
            <UserString key="MaxPadding" value="23"/>
            <UserString key="MinMargin" value="6"/>
            <UserString key="MinSize" value="24"/>
            <UserString key="Padding" value="18"/>

            <Widget type="ImagePushButton" skin="ImageBox" name="AllButton" align="Left VCenter">
                <Property key="ImageHighlighted" value="textures\ui\all_over.dds"/>
                <Property key="ImageNormal" value="textures\ui\all_idle.dds"/>
                <Property key="ImagePushed" value="textures\ui\all_pressed.dds"/>
                <Property key="NeedKey" value="false"/>
                <UserString key="Title" value="All"/>
            </Widget>
            <Widget type="ImagePushButton" skin="ImageBox" name="WeaponButton" align="Left VCenter">
                <Property key="ImageHighlighted" value="textures\ui\weapon_over.dds"/>
